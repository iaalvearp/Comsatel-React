  <style>
    /* LAYOUT PRINCIPAL 
     Ajustado para trabajar con el Layout.astro que ya provee padding-left en body
  */
    .dashboard-content {
      /* Eliminamos margin-left y width calc porque el body del Layout ya tiene padding */
      width: 100%;
      display: flex;
      justify-content: center;
      padding: 0 20px 20px 20px; /* Padding lateral y bottom, top 0 porque el margin del header lo empuja */
      margin-top: 11rem; /* Espacio para el header fixed del Layout */
    }

    .starlink-main {
      width: 100%;
      padding-top: 0;
    }

    /* BARRA DE RESUMEN (Summary)
  */
    .starlink-nav {
      display: flex;
      align-items: center;
      justify-content: space-between;
      margin: 0px;
      width: 100%;
    }

    .alerts-summary {
      display: flex;
      align-items: center;
      justify-content: space-between;
      background: var(--azul-primario-096);
      border: 1px solid var(--blanco-06);
      border-radius: 12px;
      padding: 16px 24px;
      width: 100%;
    }

    .summary-text {
      color: var(--blanco-total);
      font-size: 0.9rem;
      font-weight: 600;
    }

    /* Colores de texto en el resumen */
    .status-active {
      color: var(--estado-activo);
      margin-left: 5px;
    }
    .status-ending {
      color: var(--estado-finalizando);
      margin-left: 5px;
    }
    .status-inactive {
      color: var(--estado-inactivo);
      margin-left: 5px;
    }

    /* Contador de alertas a la derecha */
    .alerts-count {
      display: flex;
      align-items: center;
      gap: 10px;
      color: var(--blanco-total);
      font-size: 0.9rem;
      font-weight: 600;
    }

    .alert-icon {
      width: 1.25rem; /* Ajustado para mejor visibilidad */
      height: 1.25rem;
    }

    /* CABECERA DE SECCIÓN
  */
    .starlink-header {
      display: flex;
      justify-content: space-between;
      align-items: flex-end;
      margin: 2rem 0 1rem; /* Un poco más de aire arriba */
    }

    .section-title {
      color: var(--blanco-06);
      font-size: 0.9rem; /* Un poco más grande para legibilidad */
      letter-spacing: 2px;
      text-transform: uppercase;
      font-weight: 400; /* Muli light */
      margin-bottom: 0; /* Corrección solicitada */
    }

    .section-title strong {
      color: var(--blanco-total);
      font-weight: 700;
    }

    .total-subs {
      color: var(--blanco-total);
      font-weight: 600;
      font-size: 1.1rem;
    }

    /* TABLA DE SUSCRIPCIONES
  */
    .subscriptions-table-container {
      overflow-x: auto;
      padding-bottom: 20px; /* Espacio para el scroll si aparece */
    }

    .subscriptions-table {
      width: 100%;
      border-collapse: separate; /* Clave para el border-radius en filas */
      border-spacing: 0 10px; /* Espacio entre filas */
    }

    .subscriptions-table th {
      text-align: left;
      color: var(--blanco-08);
      font-size: 0.75rem;
      letter-spacing: 2px;
      padding: 10px 20px;
      text-transform: uppercase;
      font-weight: 600;
    }

    .subscriptions-table td {
      background: var(--azul-primario-06);
      padding: 15px 20px;
      color: var(--blanco-total);
      font-size: 0.9rem;

      /* Bordes superior e inferior para todas las celdas */
      border-top: 1px solid var(--blanco-02);
      border-bottom: 1px solid var(--blanco-02);

      text-align: left;
      vertical-align: middle;
    }
    td p {
      display: flex;
      align-items: center;
      gap: 0.25rem;
    }

    /* Icono de alerta pequeño dentro de la tabla */
    .alert-icon-small {
      width: 1rem;
      height: 1rem;
      vertical-align: text-bottom;
      margin-left: 5px;
    }

    /* BORDES REDONDEADOS (Efecto Píldora)
  */
    .subscriptions-table td:first-child {
      border-top-left-radius: 18px;
      border-bottom-left-radius: 18px;
      border-left: 1px solid var(--blanco-02);
    }

    .subscriptions-table td:last-child {
      border-top-right-radius: 18px;
      border-bottom-right-radius: 18px;
      border-right: 1px solid var(--blanco-02);
      text-align: right; /* Alinear flecha a la derecha */
      width: 80px; /* Ancho fijo para la columna de acción */
    }

    .action-icon {
      width: 32px;
      height: 32px;
      transition: transform 0.2s ease;
      cursor: pointer;
    }

    .action-icon:hover {
      transform: translateX(3px);
    }

    /* BADGES (ESTADO)
     Diseño tipo píldora con borde
  */
    .status-badge {
      display: inline-flex;
      align-items: center;
      justify-content: space-between;
      gap: 15px;
      padding: 6px 16px;
      border-radius: 50px;
      border: 1px solid var(--blanco-02);
      font-size: 0.8rem;
      font-weight: 600;
      min-width: 120px;
      width: 100%;
      max-width: 140px;
      background: rgba(255, 255, 255, 0.03);
    }

    .dot {
      width: 18px;
      height: 6px;
      border-radius: 4px;
      display: inline-block;
    }

    /* Colores Específicos para Badges */
    .status-badge.active-badge {
      border-color: var(--blanco-04);
    }
    .dot.active {
      background-color: var(--estado-activo);
      box-shadow: 0 0 8px var(--estado-activo);
    }

    .status-badge.ending-badge {
      border-color: var(--blanco-04);
    }
    .dot.ending {
      background-color: var(--estado-finalizando);
      box-shadow: 0 0 8px var(--estado-finalizando);
    }

    .status-badge.inactive-badge {
      border-color: var(--blanco-04);
    }
    .dot.inactive {
      background-color: var(--estado-inactivo);
      box-shadow: 0 0 8px var(--estado-inactivo);
    }

    @media (width >= 940px) {
      .dashboard-content {
        margin: 0;
        width: calc(100% - 7.5rem);
        padding: 0;
        margin-top: -3rem;
        margin-bottom: 5rem;
        margin-left: 1rem;
      }
    }
  </style>
</section>
