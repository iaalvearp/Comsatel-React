<style>
    /* Recovery specific adjustments */
    .recovery-wrapper {
        width: 100%;
        min-height: 100%;
        display: grid;
        position: relative;
        place-content: center;
        background: transparent;
        box-shadow: none;
        overflow: visible;
        border-radius: 0;
        color: var(--blanco-08);
    }

    .recovery-card {
        border-radius: 30px;
        /* Full rounded card */
        border: 1px solid var(--blanco-06);
        background: linear-gradient(180deg, var(--azul-primario-08) 0%, var(--azul-primario-total) 100%);
        box-shadow: 0 0 20px var(--negro-06);
    }

    .page-title {
        text-align: center;
        font-size: 1.75rem;
        margin-bottom: 1.5rem;
        font-weight: 300;
    }

    .recovery-card {
        padding: 2.5rem 1.5rem;
        width: 90%;
        margin: 0 auto;
    }
    .card-subtitle {
        font-size: 0.9rem;
        margin-bottom: 20px;
        color: var(--blanco-08);
        font-weight: 400;
        text-align: center;
    }
    .dashboard-content-inner-password {
        width: 100%;
        display: flex;
        justify-content: center;
        padding: 24px;
    }

    .login-form {
        display: grid;
        gap: 1rem;
    }

    .input-group {
        position: relative;
        width: 100%;
        height: 3.25rem;
    }

    .input-group input {
        width: 100%;
        height: 100%;
        background: transparent;
        border: 1px solid var(--blanco-06);
        border-radius: 15px;
        color: var(--blanco-total);
        font-size: 1rem;
        outline: none;
        box-sizing: border-box;
        padding: 0 1rem;
    }

    .input-group label {
        position: absolute;
        font-size: 14px;
        left: 12px;
        top: 16px;
        background: var(--azul-primario-096);
        transition: top 0.3s ease, font-size 0.3s ease;
        font-weight: 600;
        border-radius: 16px;
    }

    .btn-primary {
        background-color: var(--accent-cyan);
        color: var(--blanco-total);
        border: none;
        padding: 15px;
        border-radius: 15px;
        font-size: 1.1rem;
        font-weight: 600;
        cursor: pointer;
        transition: background-color 0.3s ease-in-out;
        margin-top: 10px;
    }

    .btn-primary:hover {
        background-color: var(--cyan-hover);
    }

    .btn-primary:active {
        transform: scale(0.98);
    }

    .input-group input:focus+label, .input-group input:not(:placeholder-shown)+label {
        top: -8px;
        font-size: 0.8rem;
        background-color: var(--azul-oscuro);
        padding: 0 1rem;
        font-weight: 600;
        position: absolute;
    }

    @media (width >= 940px) {
        .recovery-wrapper {
            width: fit-content;
            height: min-content;
            position: absolute;
            inset: 0;
            margin: auto;
        }
    }
</style>