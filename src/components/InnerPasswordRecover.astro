<main class="recovery-wrapper">
  <h1 class="page-title">Cambio de clave</h1>

  <section class="login-card recovery-card">
    <h2 class="card-subtitle">Ingresa tu nueva contraseña</h2>

    <form class="login-form" id="recoveryForm">
      <div class="input-group">
        <input
          type="password"
          id="new-password"
          placeholder=" "
          required
          minlength="6"
        />
        <label for="new-password">Nueva Contraseña</label>
      </div>

      <div class="input-group">
        <input
          type="password"
          id="confirm-password"
          placeholder=" "
          required
          minlength="6"
        />
        <label for="confirm-password">Repetir contraseña</label>
      </div>

      <button type="submit" class="btn-primary">Finalizar</button>
    </form>
  </section>
</main>

<!-- 2. Agregamos la lógica en el script -->
<script>
  const form = document.getElementById("recoveryForm");
  const pass1 = document.getElementById("new-password") as HTMLInputElement;
  const pass2 = document.getElementById("confirm-password") as HTMLInputElement;

  form?.addEventListener("submit", (e) => {
    // DETIENE el envío automático del formulario (Esto es clave)
    e.preventDefault();

    // Validación simple
    if (pass1.value !== pass2.value) {
      alert("Las contraseñas no coinciden");
      return;
    }

    // Aquí iría tu llamada a la API para guardar la clave real
    // ...

    // Redirección segura con JavaScript
    alert("Contraseña actualizada correctamente");
    window.location.href = "/"; // Te lleva al login (inicio)
  });
</script>

<style>
  /* Recovery specific adjustments */
  .recovery-wrapper {
    width: 100%;
    min-height: 100%;
    display: grid;
    position: relative;
