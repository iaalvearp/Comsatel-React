    background: linear-gradient(
      180deg,
      var(--azul-primario-08) 0%,
      var(--azul-primario-total) 100%
    );
    box-shadow: 0 0 20px var(--negro-06);
  }

  .page-title {
    text-align: center;
    font-size: 1.75rem;
    margin-bottom: 1.5rem;
    font-weight: 300;
  }

  .recovery-card {
    padding: 2.5rem 1.5rem;
    width: 90%;
    margin: 0 auto;
  }
  .card-subtitle {
    font-size: 0.9rem;
